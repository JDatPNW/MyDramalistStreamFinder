{
  "name": "MDL Stream Finder",
  "version": "0.1",
  "description": "A Chrome Extension that automatically searches Streaming sites for the given drama",
  "action":
  {
    "default_icon": "icon.png"
  },
  "background":
  {
      "service_worker": "background.js"
  },
  "permissions": ["tabs"],
  "content_scripts": [{
      "js": ["content.js"],
      "matches": ["https://mydramalist.com/*"]
   }],
  "manifest_version": 3,
"icons": {
        "16" : "icon.png",
        "48" : "icon.png",
        "128": "icon.png"
  }
}
